<view class="contain">
  <!-- 2活动集 -->
  <view class="actPart">
    <!-- 2.1筛选按钮 -->
    <view class="selectLine">
      <view class="divideText">{{type_name}}</view>
    </view>
    <!-- 2.2列表渲染各活动 -->
    <view class="acts">
      <view class="act" wx:for="{{acting}}" wx:key="item" bindtap="viewMore" data-id="{{item._id}}">
        <!-- 活动标签 -->
        <view class="actLable">
          <van-icon name="label-o" size="40rpx" color="#80a0c0" />{{item.lable}}
        </view>
        <!-- 活动地址 -->
        <view class="actAddr">{{item.addr}}</view>
        <!-- 活动名称 -->
        <view class="actTitle">{{item.title}}</view>
        <!-- 底行信息 | 报名人数 举办方 收藏按钮 -->
        <view class="actIntro">
          <view class="regNum">{{item.regNum}}人已报名</view>
          <view class="actHost">
            <text decode="{{true}}">| &ensp;&ensp;&ensp;&ensp;</text>{{item.host}}举办</view>
          <view class="collect" bindtap="collect" mark:starMark="star" data-collectId="{{item._id}}">
            <van-icon name="star" custom-style="color:{{item.isCollected==true? 'gold':'#80a0c0'}}" size="40rpx" />
          </view>
        </view>
      </view>
      <!-- 这个null块 显示提示信息 顺便用来占位  以便显示出被tabbar遮盖住的部分 -->
      <view class="null">— 滑到底啦 真的没有了qwq —</view>
    </view>
  </view>
</view>