page{
  letter-spacing: 1rpx;
}
.contain {
  width: 100%;
  height: 100%;
  background-color: var(--color-background);
  /* background-color: #000; */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

van-icon {
  vertical-align: middle;
}

.tabPart {
  width: 90%;
  margin: 0 auto;
}

.divideText{
  font-size: var(--font-size-L);
  font-weight: 600;
}

/* 活动集部分 */

/* 活动集部分 */
.actPart {
  margin-top: 45rpx;
  font-size: var(--font-size-S);
  color: black;
  font-weight: 400;
}

/* 活动集块 */
.acts{
  margin-top: var(--font-size-M);
  /* margin-bottom: 70rpx; */
}

.act {
  border-radius: var(--font-size-M);
  overflow: hidden;
  background-color: rgb(255, 255, 255);
  margin-bottom: 40rpx;
  padding: 40rpx 40rpx 30rpx 40rpx;
  box-shadow: 10rpx 10rpx 40rpx rgba(150, 150, 150, 0.35);
}

.act .actLable {
  letter-spacing: 1rpx;
  display: inline;
  font-weight: 300;
  color: #868688;
}

.act .actAddr {
  margin-top: 5rpx;
  display: inline;
  float: right;
  /* font-weight: 580; */
  letter-spacing: 5rpx;
  color: #868688;
}

.act .actTitle {
  display: inline-block;
  width: 70%;
  letter-spacing: 2rpx;
  margin-top: 30rpx;
  font-weight: 800;
  font-size: var(--font-size-M);
  height: 75rpx;
}

.actCover{
  display: inline;
  float: right;
  margin-top: 30rpx;
}

.act .actIntro {
  margin-top: 100rpx;
  font-size: var(--font-size-S);
}

.act .regNum {
  display: inline;
  color: #868688;
}

.act .actHost {
  display: inline;
  margin-left: 10%;
  color: #868688;
}

.act .collect {
  display: inline;
  float: right;
  position: relative;
  top: -10rpx;
}

.act .collect::after{
  left: -20rpx; 
  top: -20rpx; 
  right: -20rpx; 
  bottom: -20rpx;
}

.null{
  background-color: transparent;
  height: 150rpx;
  width: 100%;
  color: #cfcfcf;
  text-align: center;
}