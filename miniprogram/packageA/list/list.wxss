/* packageA/list/list.wxss */
.contain {
  width: 90%;
  height: 100%;
  margin: 0 auto;
  background-color: #f7f7f7;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.tabPart {
  width: 90%;
  margin: 0 auto;
}

/* 活动集部分 */
.actPart {
  margin-top: 45rpx;
  font-size: 20rpx;
  color: black;
  font-weight: 400;
}

.divideText {
  display: inline;
  font-size: 20px;
  font-weight: 700;
}

.selectButton {
  display: inline;
  /* margin-left: 76%; */
  float: right;
  font-size: 25rpx;
}

/* 活动集块 */
.acts {
  margin-top: 30rpx;
  /* margin-bottom: 70rpx; */
}

.act {
  border-radius: 30rpx;
  overflow: hidden;
  background-color: rgb(255, 255, 255);
  margin-bottom: 50rpx;
  padding: 40rpx;
  box-shadow: 10rpx 10rpx 40rpx rgba(150, 150, 150, 0.2);
}

.act .actLable {
  display: inline;
  font-weight: 500;
  font-size: 25rpx;
}

.act .actAddr {
  display: inline;
  float: right;
  color: #868688;
}

.act .actTitle {
  margin-top: 30rpx;
  font-weight: 700;
  font-size: 30rpx;
}

.act .actIntro {
  margin-top: 80rpx;
}

.act .regNum {
  display: inline;
  color: #868688;
}

.act .actHost {
  display: inline;
  margin-left: 10%;
  color: #868688;
}

.act .collect {
  display: inline;
  float: right;
}

.null {
  background-color: transparent;
  height: 150rpx;
  width: 100%;
  color: #cfcfcf;
  text-align: center;
}