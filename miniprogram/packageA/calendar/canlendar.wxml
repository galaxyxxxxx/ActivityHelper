<view class="container">
	<!-- PART1. 头部tab -->

	<!-- PART2. 头部搜索栏等 -->
	<view class="header">
		<!--返回按钮 详情按钮 搜索按钮 新建按钮 -->
		<van-row>
			<van-col span="1">
				<view class="return_button" bindtap="returnTab">
					<van-icon name="arrow-left" size="35rpx" font-size="bord" />
				</view>
			</van-col>
			<van-col span="4">
				<view class="text"bindtap="returnTab">{{return_date}}</view>
			</van-col>
			<van-col span="1" offset="13">
				<view class="detail_button">
					<van-icon name="notes-o" size="40rpx" />
				</view>
			</van-col>
			<van-col span="1" offset="2">
				<view class="search_button">
					<van-icon name="search" size="40rpx" />
				</view>
			</van-col>
		</van-row>
	</view>

	<!-- PART3.日历及活动 主体 -->
	<view class="body">
		<!--星期标题 -->
		<view class="week">
			<block  wx:key="index" wx:for="{{weekArr}}">
				<view class='{{item == "S" ? "weekend" : "{{item}}"}}'>
					<view class="weekMark">
						<view>{{item}}</view>
					</view>
				</view>
			</block>
		</view>
		<!-- 日期 -->
		<view class="calender">
			<block wx:key="index" wx:for='{{dateArr}}'>
				<view class='{{item.activity == 1 ? "actDay" : "{{item}}" }}'>
					<!-- 检测当天是否有活动 并活动的日期增加样式 -->
					<van-divider wx:if="{{index >= 7}}" customStyle="border-color: #dbdbdb; margin: 0; padding:10rpx 0;" /> <!-- 从第二行开始每行顶部有一行水平线-->
					<view class='{{isToday == item.isToday ? "nowDay" : "{{item}}"}}'>
						<!-- 检测是否为当天 并为当天增加样式 -->
						<view class='date-head' bindtap='showAct' data-year='{{year}}' data-month='{{month}}' data-datenum='{{item.dateNum}}'>
							<view class='{{(index+1)%7 <= 1 ? "weekend" : "{{item}}"}}'>
								<!-- 将周末的日子变灰色-->
								<view>{{item.dateNum}}</view>
							</view>
						</view>
					</view>
				</view>
			</block>
		</view>
		<!-- 活动事件 -->
		<view class="activity">
			<scroll-view bind:scroll="onScroll" scroll-y id="scroller" style="height: 400px;">
        <block wx:key="index" wx:for="{{actLine}}">
				<van-cell title="{{item.title}}" value="{{item.host}}" icon="bullhorn-o" is-link link-type="navigateTo" url="../activityDetail/index?act_id={{item.id}}"/>
        </block>
				<view class="noEvents" wx:if="{{actLine.length == 0 }}">No Events</view>
      </scroll-view>
		</view>
	</view>

	<!-- PART4.底部选项 -->
	<view class="footer">
		<van-divider custom-style="color: red"/>
		<view>Today</view>
		<view>Selector</view>
		<view>Inbox</view>
	</view>
</view>