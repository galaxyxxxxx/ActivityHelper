.container{
  font-family: PingFangSC-Regular, sans-serif;
}

.header{
  height: 5%;
  width: 100%;
  position:absolute;
  left:0;
  top:0%;
  background-color: white;
  font-size: 30rpx;
  text-align: center;
  color: red;
  padding-left: 2%;
  padding-right: 2%;
  padding-top: 1%;
  padding-bottom: 1%;
}
.header .return_button{
  padding-top: 5rpx;
}

.body{
  height: 85%;
  width: 100%;
  position:absolute;
  left:0;
  top:5%;
}
.week {
  padding: 0;
  width: 100%;
  margin: 0 auto;
  border-bottom: #858585 solid 1px;
  background-color: white;
}
.week>view{
  position: relative;
  display: inline-block;
  width: 14.285%;
  /* width: 12.57%; */
  text-align: center;
  vertical-align: middle;
}
.weekMark{
  font-size: 8pt;
}
.weekend {
  color: #868688;
}

.calender{
  font-size: 0;

  /* padding: 10rpx 0; */
  width: 100%;
  margin: 0 auto;
  background-color:#f4f4f4;
}
.calender>view{
  position: relative;
  display: inline-block;
  width: 14.285%; 
  text-align: center;
  vertical-align: middle;
}
.calender>view:focus{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: white;
  background-color: black;
  margin: 0 auto;
  margin-bottom: 60rpx;
}
.date-head{
  height: 80rpx;
  line-height: 100rpx;
  font-size: 12pt;
  color: #000000;
  /* border-top: 1px solid #dbdbdb; */
}
.actDay .date-head{
  color: black;
}
.nowDay .date-head{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: white;
  background-color: red;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.activity{
  width: 100%;
  background-color: white;
  border-top: #c6c6c6 1px solid;
}
.noEvents{
  text-align: center;
  padding-top: 40%;
  color: #939395;
}

.footer{
  height: 10%;
  width: 100%;
  position:absolute;
  left:0;
  top:90%;
  background-color: #f7f7f7;
  color: red;
}

.footer>view{
  position: relative;
  display: inline-block;
  width: 33%;
  text-align: center;
  vertical-align: middle;
  padding-top: 20rpx;
  font-size: 12rpt;
}