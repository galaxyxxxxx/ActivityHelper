page{
  background-color: white;
}
van-icon {
  vertical-align: middle;
}
/* 封面 */
.cover {
  display: flex;
  width  : 100%;
}
/* 文字部分 */
.content{
  padding: var(--font-size-M);
  font-size: var(--font-size-S);
}
/* 活动时间 */
.time{
  color: var(--color-theme);
  letter-spacing: 2px;
  margin-bottom: 10rpx;
}
/* 标题 */
.title {
  color: black;
  font-size: 45rpx;
  font-weight: 800;
  width: 70%;
  display: inline-block;
}
/* 报名按钮 */
.registration {
  align-items : center;
  display: flex;
  float: right;
}

/* 活动详情 */
.detail {
  display: block;
  color: #868688;
  margin-top: var(--font-size-M);
  margin-bottom: var(--font-size-M);
  font-size: 26rpx;
  line-height: 45rpx;
  width: 100%;
  text-align: justify;
}

.comment{
  background-color: #F2F1F6;
  margin-top: var(--font-size-M);
  padding: var(--font-size-S);
  border-radius: var(--font-size-S);
}

.comment_time{
  color: #868688;
}

.comment_text{
  font-size: 25rpx;
  color: #454547;
}

.commentShell {
  margin-top: 50rpx;
  height: var(--font-size-M);
  margin-bottom: 100rpx;
}

.inputComment{
  /* display: inline-block; */
  background-color: aqua;
  border: var(--color-theme) 1px solid;
  border-radius: var(--font-size-S);
  overflow: hidden;
  width: 95%;
}

/* 评论按钮 */
.submitComment{
  display: inline-block;
  /* align-items : center; */
  /* display: flex; */
  /* float: right; */ 
}

.activity-time {
  display        : flex;
  flex-wrap      : wrap;
  justify-content: space-around;
}

.null{
  background-color: transparent;
  height: 150rpx;
  width: 100%;
  color: #cfcfcf;
  text-align: center;
}
