<view class="contain">

	<!-- 搜索栏 -->
	<van-search
  value="{{ value }}"
	shape="round"
	input-align="center"
  placeholder= "请输入搜索关键词"
  
	bind:focus="onFocus"
	bind:blur="onBlur"
	bind:clear="onClear"
	bind:change="onChange"
	bind:search="onSearch"
/>

	<van-tabs active="{{ tabbar }}" bind:change="onChangeTab" animated swipeable color="var(--color-theme)" border="{{false}}"
		line-height="1px" sticky="{{true}}">

		<!-- 类型分区 -->
		<van-tab title="分区">
			<van-grid clickable column-num="3" icon-size="100rpx" border="{{false}}" clickable="{{true}}" squre="{{true}}" gutter="20rpx">
				<block wx:for="{{actType}}" wx:key="item" class="typeBlock">
					<van-grid-item text-class="type" icon="{{item.type_img}}" link-type="navigateTo"
						url="../../packageA/list/list?type={{item._id}}" text="{{item.type_name}}" />
				</block>
			</van-grid>
			<!-- 由于tabbar的bug而加的空白框 -->
			<view class="null" ></view>
		</van-tab>
		

		<!-- 日历查询 -->
		<van-tab title="时序">
			<!-- PART1.日历及活动 主体 -->
			<view class="body">
				<!-- 日历 -->
				<van-calendar show-title="{{false}}" show-subtitle="{{false}}" type="single" poppable="{{ false }}"
					row-height="45" show-confirm="{{ false }}" class="calendar" bind:select="onSelect"
					color="var(--color-theme)" />
				<!-- 活动事件 -->
				<view class="activity">
					<scroll-view bind:scroll="onScroll" scroll-y id="scroller">

						<block wx:key="index" wx:for="{{actLine}}">

							<van-cell value="{{item.addr}}" is-link link-type="navigateTo"
								url="../../packageA/activityDetail/activityDetail?aid={{item.id}}" title="{{item.title}}" icon="smile-o"
								title-class="actTitle" title-width="240rpx" value-class="actAddr" />
						</block>

						<view class="noEvents" wx:if="{{actLine.length == 0 }}">No Events</view>
					</scroll-view>
					<!-- 由于tabbar的bug而加的空白框 -->
					<view class="null" wx:if="{{actLine != 0}}"></view>
				</view>
			</view>

		</van-tab>

	</van-tabs>
</view>