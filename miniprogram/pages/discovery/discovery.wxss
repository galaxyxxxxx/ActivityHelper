page {
  background-color: white;
  font-size: var(--font-size-S);
}

.contain {
  width: 100%;
  height: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.van-grid{
  padding:0 !important
}

.van-grid-item{
  padding: 40rpx 0 40rpx 0 !important;
}

.type {
  position: relative;
  top: 10rpx;
  align-self: center;
}

.type text{
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 10rpx;
  color: #000000;
}


.act {
  border-radius: var(--font-size-M);
  overflow: hidden;
  background-color: rgb(255, 255, 255);
  margin-bottom: 50rpx;
  padding: 40rpx;
  box-shadow: 10rpx 10rpx 40rpx rgba(150, 150, 150, 0.2);
}

.week {
  padding: 0;
  width: 100%;
  margin: 0 auto;
  /* border-bottom: transparent solid 1px; */
  background-color: white;
}

.week>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  /* width: 12.57%; */
  text-align: center;
  vertical-align: middle;
}

.weekMark {
  font-size: 8pt;
}

.weekend {
  color: #b6b6b6;
}

.calendar {
  --calendar-height: 300px;
}

.activity {
  width: 100%;
  background-color: white;
  border-top: #e4e2e2 1px solid;
  font-size: var(--font-size-S);
}

.actTitle {
  margin-left: 20rpx;
  font-weight: 800;
  font-size: 30rpx;
  min-width: 67% !important;
  /* width: 240rpx; */
}

.actTitle icon {
  color: yellow-
}

.actAddr {
  font-size: 25rpx;
}

.noEvents {
  font-size: 30rpx;
  text-align: center;
  padding-top: 20%;
  color: #939395;
}