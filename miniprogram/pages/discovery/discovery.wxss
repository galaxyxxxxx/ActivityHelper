page{
  background-color: white;
  font-size: 25rpx;
}

.week {
  padding: 0;
  width: 100%;
  margin: 0 auto;
  /* border-bottom: transparent solid 1px; */
  background-color: white;
}
.week>view{
  position: relative;
  display: inline-block;
  width: 14.285%;
  /* width: 12.57%; */
  text-align: center;
  vertical-align: middle;
}
.weekMark{
  font-size: 8pt;
}
.weekend {
  color: #b6b6b6;
}

.calender{
  font-size: 0;
  /* padding: 10rpx 0; */
  width: 100%;
  margin: 0 auto;
  background-color:#ffffff;
}
.calender>view{
  position: relative;
  display: inline-block;
  width: 14.285%; 
  text-align: center;
  vertical-align: middle;
}
.calender>view:focus{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: white;
  background-color: black;
  margin: 0 auto;
  margin-bottom: 60rpx;
}
.date-head{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 12pt;
  color: #000000;
  /* border-top: 1px solid transparent; */
}
.actDay .date-head{
  color: black;
}
.nowDay .date-head{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  text-align: center;
  color: white;
  background-color: red;
  margin: 0 auto;
  margin-bottom: 20rpx; 
}

.activity{
  width: 100%;
  background-color: white;
  border-top: #e4e2e2 1px solid;
}
.noEvents{
  text-align: center;
  padding-top: 20%;
  color: #939395;
}