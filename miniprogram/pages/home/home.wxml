<view class="contain">
	<view class="tabPart">
		<!-- 1未来的恰饭版块 | 大图显示主活动  -->
		<view class="mainPart" wx:if="{{act1}}">
			<!-- 1.1时间 -->
			<view class="actTime">{{month}}.{{day}} · {{year}}</view>
			<!-- <van-button class="chooseToday" size="mini" round="{{true}}" bindtap="edit" color="#80a0c0" plain>今天</van-button> -->
			<view class="cover" bindtap="linkToMe">
				<open-data type="userAvatarUrl"></open-data>
			</view>
			<view class="todayTitle">TODAY</view>
			<!-- 1.2图像块 -->
			<view class="actSquare">
				<view class="actLable">{{act1.host}} | {{act1.lable}}</view>
				<view class="actTitle">{{act1.title}}</view>
				<view class="regNum">
					<van-icon name="friends" color="white" size="30rpx" />{{act1.regNum}}人已报名</view>
				<van-button plain round size="small" class="moreButton" custom-style="color : #80a0c0" bindtap="viewMore1" id="{{act1.id}}">MORE</van-button>
			</view>
		</view>

		<!-- 2活动集 -->
		<view class="actPart">
			<!-- 2.1分隔线 + 筛选按钮 -->
			<view class="selectLine">
				<view class="divideText">热门活动</view>
				<view class="selectButton" bindtap="select">筛选
					<van-icon name="wap-nav" size="25rpx" />
				</view>
			</view>
			<!-- 2.2列表渲染各活动 -->
			<view class="act" wx:for="{{acting}}" wx:key="item" bindtap="viewMore" id="{{item.id}}">
				<van-divider />
				<view class="actLable">
					<van-icon name="label-o" size="40rpx" color="#80a0c0" />{{item.lable}}</view>
				<view class="actAddr">{{item.addr}}</view>
				<view class="actTitle">{{item.title}}</view>
				<view class="actIntro">
					<view class="regNum">{{item.regNum}}人已报名</view>
					<view class="actHost"><text decode="{{true}}">| &ensp;&ensp;&ensp;&ensp;</text>{{item.host}}举办
					</view>
					<!-- <view id="{{index}}" class="collect" bindtap="collect"> -->
					<!-- <van-icon name="{{item.collectIcon}}" custom-style="color : {{item.collectColor}}" size="40rpx" /> -->
					<view class="collect" bindtap="collect"><van-icon name="star-o" custom-style="color : #80a0c0" size="40rpx" /></view>
				</view>
			</view>
		</view>
	</view>

</view>