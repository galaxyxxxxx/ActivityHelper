page{
  font-size: 25rpx;
  background-color: white;
}
van-icon {
  vertical-align:middle
}
.intro{
  width: 100%;
  height: 225rpx;
  background-color: #f7f7f7;
}
.cover{
  position: absolute;
  top: 150rpx;
  left: 12%;
  width: 150rpx;
  height: 150rpx;
  border-radius: 100rpx;
  border: 1rpx solid transparent;
  overflow: hidden;
}
.name{
  position: absolute;
  top: 90rpx;
  left: 210rpx;
  font-size: 30rpx;
}
.edit_setting{
  width: auto;
  position: absolute;
  top: 230rpx;
  left: 65%;
}
.setting{
  display: inline-block;
  margin-left: 15rpx;
}

.act{
  position: relative;
  top:100rpx;
}

.newAct{
  z-index: 500;
  position: absolute;
  top: 80%;
  left: 79%;
  opacity: 0.4;
}

.actInfo{
  margin: 30rpx 20rpx 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.actTime{
  display: inline-block;
  color: #868688;
  font-size: 20rpx;
}
.actName{
  display: inline-block;
  color: #80a0c0;
  font-size:25rpx;
}